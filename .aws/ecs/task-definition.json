{
  "executionRoleArn": "arn:aws:iam::SED_TARGET_AWS_ACCOUNT_ID:role/SED_TARGET_APP_NAME-TaskExecution",
  "taskRoleArn": "arn:aws:iam::SED_TARGET_AWS_ACCOUNT_ID:role/SED_TARGET_APP_NAME-TaskExecution",
  "family": "SED_TARGET_APP_NAME",
  "cpu": "256",
  "memory": "1024",
  "requiresCompatibilities": ["FARGATE"],
  "networkMode": "awsvpc",
  "volumes": [
    {
      "fsxWindowsFileServerVolumeConfiguration": null,
      "efsVolumeConfiguration": null,
      "name": "app-storage",
      "host": {
        "sourcePath": null
      },
      "dockerVolumeConfiguration": null
    }
  ],
  "containerDefinitions": [
    {
      "name": "nginx",
      "image": "SED_TARGET_AWS_ACCOUNT_ID.dkr.ecr.ap-northeast-1.amazonaws.com/SED_TARGET_APP_NAME-nginx:latest",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "app-storage",
          "containerPath": "/app"
        }
      ],
      "logConfiguration": {
        "logDriver": "awsfirelens",
        "options": {
          "Name": "loki",
          "Url": "https://SED_TARGET_LOKI_ID:SED_TARGET_LOKI_SECRET@logs-prod-us-central1.grafana.net/loki/api/v1/push",
          "Labels": "{job=\"firelens\"}",
          "RemoveKeys": "container_id,ecs_task_arn",
          "LabelKeys": "container_name,ecs_task_definition,source,ecs_cluster",
          "LineFormat": "key_value"
        }
      }
    },
    {
      "name": "app",
      "image": "SED_TARGET_AWS_ACCOUNT_ID.dkr.ecr.ap-northeast-1.amazonaws.com/SED_TARGET_APP_NAME-app:latest",
      "mountPoints": [
        {
          "sourceVolume": "app-storage",
          "containerPath": "/app"
        }
      ],
      "logConfiguration": {
        "logDriver": "awsfirelens",
        "options": {
          "Name": "loki",
          "Url": "https://SED_TARGET_LOKI_ID:SED_TARGET_LOKI_SECRET@logs-prod-us-central1.grafana.net/loki/api/v1/push",
          "Labels": "{job=\"firelens\"}",
          "RemoveKeys": "container_id,ecs_task_arn",
          "LabelKeys": "container_name,ecs_task_definition,source,ecs_cluster",
          "LineFormat": "key_value"
        }
      },
      "environment": [
        {
          "name": "APP_ENV",
          "value": "production"
        },
        {
          "name": "APP_DEBUG",
          "value": "false"
        },
        {
          "name": "APP_SCHEME",
          "value": "https"
        },
        {
          "name": "APP_URL",
          "value": "https://snails8.site"
        },
        {
          "name": "MIX_APP_SAMPLE_URL",
          "value": "https://snails8.site"
        },
        {
          "name": "LOG_CHANNEL",
          "value": "production"
        },
        {
          "name": "DB_CONNECTION",
          "value": "pgsql"
        },
        {
          "name": "SESSION_DRIVER",
          "value": "redis"
        },
        {
          "name": "CACHE_DRIVER",
          "value": "redis"
        },
        {
          "name": "QUEUE_CONNECTION",
          "value": "redis"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "ap-northeast-1"
        },
        {
          "name": "AWS_SES_DEFAULT_REGION",
          "value": "ap-northeast-1"
        },
        {
          "name": "AWS_BUCKET",
          "value": "SED_TARGET_APP_NAME-bucket"
        },
        {
          "name": "MAIL_DRIVER",
          "value": "ses"
        },
        {
          "name": "SLACK_CHANNEL",
          "value": "conversion-SED_TARGET_APP_NAME"
        },
        {
          "name": "SLACK_ICON",
          "value": ":tada:"
        },
        {
          "name": "SLACK_USERNAME",
          "value": "SED_TARGET_APP_NAME-username"
        }
      ],
      "secrets": [
        {
          "name": "APP_NAME",
          "valueFrom": "/SED_TARGET_APP_NAME/APP_NAME"
        },
        {
          "name": "AWS_ACCESS_KEY_ID",
          "valueFrom": "/SED_TARGET_APP_NAME/AWS_ACCESS_KEY_ID"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "valueFrom": "/SED_TARGET_APP_NAME/SECRET_ACCESS_KEY"
        },
        {
          "name": "APP_KEY",
          "valueFrom": "/SED_TARGET_APP_NAME/TF_VAR_APP_KEY"
        },
        {
          "name": "REDIS_HOST",
          "valueFrom": "/SED_TARGET_APP_NAME/REDIS_HOST"
        },
        {
          "name": "DB_HOST",
          "valueFrom": "/SED_TARGET_APP_NAME/DB_HOST"
        },
        {
          "name": "DB_DATABASE",
          "valueFrom": "/SED_TARGET_APP_NAME/TF_VAR_DB_NAME"
        },
        {
          "name": "DB_USERNAME",
          "valueFrom": "/SED_TARGET_APP_NAME/TF_VAR_DB_MASTER_NAME"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "/SED_TARGET_APP_NAME/TF_VAR_DB_MASTER_PASS"
        },
        {
          "name": "LOG_SLACK_WEBHOOK_URL",
          "valueFrom": "LOG_SLACK_WEBHOOK_URL_SAMPLE"
        },
        {
          "name": "SLACK_URL",
          "valueFrom": "SLACK_URL_SAMPLE"
        },
        {
          "name": "SF_URL",
          "valueFrom": "SF_URL_SAMPLE"
        },
        {
          "name": "SF_ID",
          "valueFrom": "SF_ID_SAMPLE"
        },
        {
          "name": "SF_SECRET",
          "valueFrom": "SF_SECRET_SAMPLE"
        },
        {
          "name": "SF_REFRESH_TOKEN",
          "valueFrom": "SF_REFRESH_TOKEN_SAMPLE"
        }
      ]
    },
    {
      "essential": true,
      "image": "grafana/fluent-bit-plugin-loki:latest",
      "name": "log_router",
      "firelensConfiguration": {
        "type": "fluentbit",
        "options": {
          "enable-ecs-log-metadata": "true"
        }
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "firelens-container",
          "awslogs-region": "ap-northeast-1",
          "awslogs-create-group": "true",
          "awslogs-stream-prefix": "firelens"
        }
      },
      "memoryReservation": 50
    }
  ]
}